{
  "name": "asmodey",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main/index.js",
  "author": "greedval",
  "description": "parser",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 --no-exit && electron .\"",
    "start": "electron .",
    "build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
  
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "eslint --ext .js,.vue src --fix",
    "format": "prettier --check \"src/**/*.{js,vue,css,html}\"",
    "format:fix": "prettier --write \"src/**/*.{js,vue,css,html}\""
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "asmodey",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/",
      "src/"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/matrix.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "lucide-vue-next": "^0.536.0",
    "pinia": "^3.0.3",
    "stream-json": "^1.9.1",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.6",
    "vue": "^3.5.18",
    "wait-on": "^8.0.4"
  }
}
